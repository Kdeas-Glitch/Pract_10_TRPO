<Page x:Class="Практика_7.Pages.Priem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Практика_7.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:validators="clr-namespace:Практика_7.ValidationRules"
      Title="Priem">

    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <ListView Grid.Column="2" ItemsSource="{Binding Receptions}" SelectedItem="{Binding SelectedPac}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата: "/>
                                <TextBlock Text="{Binding Date}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Доктор: "/>
                                <TextBlock Text="{Binding Doctor_id}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Диагноз : "/>
                                <TextBlock Text="{Binding Diagnosis}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Рекомендации: "/>
                                <TextBlock Text="{Binding Recomendations}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid x:Name="Priem_Pat"  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Дней с последнего посещения : "/>
                <TextBlock  Grid.Column="1" Text="{Binding DaysFromLastRecep}"/>
                <Label Grid.Row="1" Grid.Column="0" >Имя:</Label>
                <Label Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="1"  Content="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></Label>
                <Label Grid.Row="2" Grid.Column="0" >Фамилия:</Label>
                <Label Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="1" Content="{Binding Last_Name, UpdateSourceTrigger=PropertyChanged}"></Label>
                <Label Grid.Row="3" Grid.Column="0" >Отчество:</Label>
                <Label Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="1" Content="{Binding Middle_Name, UpdateSourceTrigger=PropertyChanged}"></Label>
                <Label Grid.Row="4" Grid.Column="0" >День Рождения:</Label>
                <Label  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"  Content="{Binding BirthDay, UpdateSourceTrigger=PropertyChanged}"></Label>

                <Label Grid.Row="5" Grid.Column="0" Margin="2 3">Диагноз:</Label>
                <TextBox Name="Diagnosis" Grid.Row="5" Grid.Column="1" >
                    <TextBox.Text>
                        <Binding Path="Diagnosis" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:RequiredRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Grid.Row="6" Grid.Column="1" Foreground="Red" FontSize="16" ItemsSource="{Binding ElementName=Diagnosis, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource Validation}" Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Label Grid.Row="6" Grid.Column="0" >Рекомендации:</Label>
                <TextBox Name="Recomendations" Grid.Row="7" Grid.ColumnSpan="2" Grid.Column="0" >
                    <TextBox.Text>
                        <Binding Path="Recomendations" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:RequiredRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Grid.Row="5" Foreground="Red" FontSize="16" ItemsSource="{Binding ElementName=Recomendations, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Style="{StaticResource Validation}" Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Grid.Row="8" Grid.Column="0" Click="Save_Priem" Style="{DynamicResource Add_Button}">Сохранить</Button>
                <Button Grid.Row="8" Grid.Column="1" Click="Go_Back">Назад</Button>
                <Button Grid.Row="9" Grid.ColumnSpan="2" Click="Change_Inf">Изменить информацию пациента</Button>
                <Button Grid.Row="10" Grid.ColumnSpan="2" Click="Delete_Priem" Style="{DynamicResource Delete_button}">Удалить приём</Button>
            </Grid>
        </Grid>

    </Grid>
</Page>
