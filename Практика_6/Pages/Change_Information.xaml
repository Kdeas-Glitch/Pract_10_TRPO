<Page x:Class="Практика_7.Pages.Change_Information"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Практика_7.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Change_Information">
    
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid x:Name="Change_pacient" Grid.Row="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" >Имя:</Label>
                <TextBox Grid.Row="0" Grid.ColumnSpan="3" Grid.Column="1"  Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Label Grid.Row="1" Grid.Column="0" >Фамилия:</Label>
                <TextBox Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="1" Text="{Binding Last_Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Label Grid.Row="2" Grid.Column="0" >Отчество:</Label>
                <TextBox Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="1" Text="{Binding Middle_Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Label Grid.Row="3" Grid.Column="0" >День Рождения:</Label>
                <TextBox  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding BirthDay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Label Grid.Row="4" Grid.Column="0">Номер Телефона:</Label>
                <TextBox  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"></TextBox>


                <Button Grid.Row="9"  Grid.Column="1" Click="Back_Changes" >Отменить изменения</Button>
                <Button Grid.Row="9" Style="{DynamicResource Add_Button}" Grid.Column="2" Click="Save_Priem">Сохранить</Button>
                <Button Grid.Row="9"  Grid.Column="3" Click="Go_Back" >Назад</Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
